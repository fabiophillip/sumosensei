<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.ufrn.dimap.pairg.sumosensei.app"
    android:versionCode="4"
    android:versionName="0.1.9-beta" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />

    <supports-screens
        android:largeScreens="true"
        android:normalScreens="false"
        android:smallScreens="false"
        android:xlargeScreens="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.google.android.gms.games.APP_ID"
            android:value="@string/app_id" />
        <meta-data
            android:name="com.google.android.gms.appstate.APP_ID"
            android:value="@string/app_id" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name="br.ufrn.dimap.pairg.sumosensei.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="br.ufrn.dimap.pairg.sumosensei.EscolhaNivelActivity"
            android:label="@string/title_activity_escolha_nivel"
            android:screenOrientation="portrait" >
        </activity>

        <service
            android:name="br.ufrn.dimap.pairg.sumosensei.BackgroundSoundService"
            android:enabled="true" >
        </service>

        <activity
            android:name="br.ufrn.dimap.pairg.sumosensei.LojinhaMaceteKanjiActivity"
            android:label="@string/title_activity_lojinha_macete_kanji"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="br.ufrn.dimap.pairg.sumosensei.VerMaceteKanjiActivity"
            android:label="@string/title_activity_ver_macete_kanji"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="br.ufrn.dimap.pairg.sumosensei.DadosPartidasAnteriores"
            android:label="@string/title_activity_dados_partidas_anteriores"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="br.ufrn.dimap.pairg.sumosensei.MostrarDadosUmaPartida"
            android:label="@string/title_activity_mostrar_dados_uma_partida"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="br.ufrn.dimap.pairg.sumosensei.ExplicacaoTeppo"
            android:label="Sumo Sensei"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="br.ufrn.dimap.pairg.sumosensei.TreinoTeppo"
            android:label="@string/title_activity_treino_teppo"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="br.ufrn.dimap.pairg.sumosensei.FimDeTreino"
            android:label="@string/title_activity_fim_de_treino"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="br.ufrn.dimap.pairg.sumosensei.TelaModoCasual"
            android:label="@string/title_activity_tela_modo_casual" >
        </activity>
        <activity
            android:name="br.ufrn.dimap.pairg.sumosensei.Configuracoes"
            android:label="@string/title_activity_configuracoes" >
        </activity>
        <activity
            android:name="br.ufrn.dimap.pairg.sumosensei.VerPalavrasTreinadasTeppoActivity"
            android:label="@string/title_activity_ver_palavras_treinadas_teppo"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="br.ufrn.dimap.pairg.sumosensei.EscolhaOrdemDosKanjisActivity"
            android:label="@string/title_activity_escolha_ordem_dos_kanjis" >
        </activity>
        <activity
            android:name="br.ufrn.dimap.pairg.sumosensei.ExplicacaoAprenderKanjisPrimeiroActivity"
            android:label="@string/title_activity_explicacao_aprender_kanjis_primeiro" >
        </activity>
    </application>

</manifest>
