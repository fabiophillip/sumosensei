<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
     android:id="@+id/screen_main"
     android:background="@drawable/background_flamula_casual">
     
         <ImageView
        android:id="@+id/fitaVermelha_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/fundo_main_screen_casual"
        android:layout_below="@+id/fundo_main_screen_casual"
        android:layout_marginTop="-20dp"
        android:src="@drawable/parte_baixo_flamula_casual_vermelho" />
    	<ImageView
        android:id="@+id/fitaVerde_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-18dp"
        android:layout_alignRight="@+id/fundo_main_screen_casual"
        android:layout_below="@+id/fundo_main_screen_casual"
        android:src="@drawable/parte_baixo_flamula_casual_verde" />
    	
    	<ImageView
        android:id="@+id/fundo_main_screen_casual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/teto_flamula_casual_home"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-20dp"
        android:src="@drawable/flamula_casual" />
    	
    	<RelativeLayout
    	    android:id="@+id/id_componentes_tela_home"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_alignBottom="@+id/fundo_main_screen_casual"
    	    android:layout_alignLeft="@id/fundo_main_screen_casual"
    	    android:layout_alignRight="@id/fundo_main_screen_casual"
    	    android:layout_alignTop="@id/fundo_main_screen_casual" >

    	    <TextView
    	        android:id="@+id/titulo_historico"
    	        android:layout_width="wrap_content"
    	        android:layout_height="wrap_content"
    	        android:layout_alignParentTop="true"
    	        android:layout_centerHorizontal="true"
    	        android:layout_marginTop="41dp"
    	        android:text="@string/titulo_dados_da_partida"
    	        android:textColor="#ffffff"
    	        android:textSize="50sp" />
    		
    	     <RelativeLayout android:id="@+id/parte_seta_continuacao_listview"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_marginTop="5dp"
        		android:layout_alignParentBottom="true"
        		android:layout_marginBottom="50dp">

    		</RelativeLayout>

    		<LinearLayout
    		    android:id="@+id/versus_e_icones_sumos"
    		    android:layout_width="wrap_content"
    		    android:layout_height="wrap_content"
    		    android:layout_alignParentRight="true"
    		    android:layout_below="@+id/titulo_historico"
    		    android:layout_marginTop="50dp"
    		    android:layout_marginRight="10dp"
    		    android:layout_marginLeft="10dp"
    		    android:layout_toRightOf="@+id/parte_seta_continuacao_listview"
    		    android:orientation="horizontal" >
    		    
    		    <ImageView
    	         android:id="@+id/imagem_sumo_voce"
    	         android:layout_width="0dp"
    	         android:layout_weight="3"
    	         android:layout_height="wrap_content"
    	         android:src="@drawable/ganhador1" />

    	     <TextView
    	         android:id="@+id/sinal_versus"
    	         android:layout_width="0dp"
    	         android:layout_weight="1"
    	         android:layout_height="wrap_content"
    	         android:text="x"
    	         android:textColor="#ffffff"
    	         android:textSize="50sp"
    	         android:gravity="center"
    	         android:layout_gravity="center"
    	         android:textAppearance="?android:attr/textAppearanceLarge" />
    	     <ImageView
    	         android:id="@+id/imagem_sumo_adversario"
    	         android:layout_width="0dp"
    	         android:layout_weight="3"
    	         android:layout_height="wrap_content"
    	         android:src="@drawable/perdedor2" />
    	     

    	     
    	     </LinearLayout>
    	     
    		<LinearLayout
    		    android:id="@+id/parte_baixoversus_e_icones_sumos"
    		    android:layout_width="wrap_content"
    		    android:layout_height="wrap_content"
    		    android:layout_alignParentRight="true"
    		    android:layout_below="@+id/versus_e_icones_sumos"
    		    android:layout_marginTop="10dp"
    		    android:layout_marginRight="10dp"
    		    android:layout_marginLeft="10dp"
    		    android:layout_toRightOf="@+id/parte_seta_continuacao_listview"
    		    android:orientation="horizontal" >
    		    
    		    <TextView
    	         android:id="@+id/label_voce_historico"
    	          android:layout_width="0dp"
    	         android:layout_weight="3"
    	         android:gravity="center"
    	         android:layout_gravity="center"
    	         android:textAppearance="?android:attr/textAppearanceLarge"
    	         android:textSize="35sp"
    	         android:layout_height="wrap_content"
    	         android:textColor="#ffffff"
    	         android:text="@string/label_voce"
    	         android:visibility="visible"/>

    	     <TextView
    	         android:id="@+id/soh_para_centralizar_nomes"
    	         android:layout_width="0dp"
    	         android:layout_weight="1"
    	         android:layout_height="wrap_content"
    	         android:text="x"
    	         android:textColor="#ffffff"
    	         android:textSize="35sp"
    	         android:gravity="center"
    	         android:layout_gravity="center"
    	         android:textAppearance="?android:attr/textAppearanceLarge"
    	         android:visibility="invisible" />
    	     <TextView
    	         android:id="@+id/label_adversario_historico"
    	         android:layout_width="0dp"
    	         android:layout_weight="3"
    	         android:gravity="center"
    	         android:layout_gravity="center"
    	         android:textAppearance="?android:attr/textAppearanceLarge"
    	         android:textSize="35sp"
    	         android:layout_height="wrap_content"
    	         android:textColor="#ffffff"
    	         android:text="Fai fin rank"
    	         android:visibility="visible" />
    	     

    	     
    	     </LinearLayout>
    	     
    		<LinearLayout
    		    android:id="@+id/parte_pontuacao"
    		    android:layout_width="wrap_content"
    		    android:layout_height="wrap_content"
    		    android:layout_alignParentRight="true"
    		    android:layout_below="@+id/parte_baixoversus_e_icones_sumos"
    		    android:layout_marginTop="5dp"
    		    android:layout_marginRight="10dp"
    		    android:layout_marginLeft="10dp"
    		    android:layout_toRightOf="@+id/parte_seta_continuacao_listview"
    		    android:orientation="horizontal" >
    		    
    		    <TextView
    	         android:id="@+id/label_sua_pontuacao_historico"
    	          android:layout_width="0dp"
    	         android:layout_weight="3"
    	         android:gravity="center"
    	         android:layout_gravity="center"
    	         android:textAppearance="?android:attr/textAppearanceLarge"
    	         android:textSize="35sp"
    	         android:layout_height="wrap_content"
    	         android:textColor="#ffffff"
    	         android:text="000"
    	         android:visibility="visible"/>

    	     <TextView
    	         android:id="@+id/soh_para_centralizar_pontuacao"
    	         android:layout_width="0dp"
    	         android:layout_weight="1"
    	         android:layout_height="wrap_content"
    	         android:text="x"
    	         android:textColor="#ffffff"
    	         android:textSize="25sp"
    	         android:gravity="center"
    	         android:layout_gravity="center"
    	         android:textAppearance="?android:attr/textAppearanceLarge"
    	         android:visibility="invisible" />
    	     <TextView
    	         android:id="@+id/soh_para_centralizar_pontuacao2"
    	         android:layout_width="0dp"
    	         android:layout_weight="3"
    	         android:gravity="center"
    	         android:layout_gravity="center"
    	         android:textAppearance="?android:attr/textAppearanceLarge"
    	         android:textSize="25sp"
    	         android:layout_height="wrap_content"
    	         android:textColor="#ffffff"
    	         android:text="Fai fin rank"
    	         android:visibility="invisible" />
    	     

    	     
    	     </LinearLayout>
    	     
    		<LinearLayout
    		    android:id="@+id/botoesCategorias"
    		    android:layout_width="wrap_content"
    		    android:layout_height="wrap_content"
    		    android:layout_alignLeft="@+id/parte_baixoversus_e_icones_sumos"
    		    android:layout_alignRight="@+id/parte_baixoversus_e_icones_sumos"
    		    android:layout_below="@+id/parte_pontuacao"
    		    android:layout_marginTop="10dp"
    		    android:gravity="center_horizontal"
    		    android:orientation="horizontal" >

    	     </LinearLayout>
    	     
    		<LinearLayout
    		    android:id="@+id/parte_data_e_hora"
    		    android:layout_width="wrap_content"
    		    android:layout_height="wrap_content"
    		    android:layout_alignParentRight="true"
    		    android:layout_below="@+id/botoesCategorias"
    		    android:layout_marginTop="15dp"
    		    android:layout_marginRight="25dp"
    		    android:layout_marginLeft="10dp"
    		    android:layout_toRightOf="@+id/parte_seta_continuacao_listview"
    		    android:orientation="horizontal" >
    		    
    		    <TextView
    	         android:id="@+id/label_data_da_partida"
    	          android:layout_width="0dp"
    	         android:layout_weight="2"
    	         android:gravity="center"
    	         android:layout_gravity="center"
    	         android:textAppearance="?android:attr/textAppearanceLarge"
    	         android:textSize="35sp"
    	         android:layout_height="wrap_content"
    	         android:textColor="#ffffff"
    	         android:text="Em 2014/12/04"
    	         android:visibility="visible"/>

    	     <TextView
    	         android:id="@+id/label_hora_da_partida"
    	         android:layout_width="0dp"
    	         android:layout_weight="1"
    	         android:layout_height="wrap_content"
    	         android:text="13:53:13"
    	         android:textColor="#ffffff"
    	         android:textSize="35sp"
    	         android:gravity="center"
    	         android:layout_gravity="center"
    	         android:textAppearance="?android:attr/textAppearanceLarge" />
    	     
    	     

    	     
    	     </LinearLayout>
    	     
    		

    		<Button
    		    android:id="@+id/botao_palavras_treinadas"
    		    android:layout_width="wrap_content"
    		    android:layout_height="wrap_content"
    		    android:layout_below="@+id/parte_data_e_hora"
    		    android:layout_centerHorizontal="true"
    		    android:text="@string/palavrasTreinadas"
    		    android:layout_marginTop="20dp"
    		    android:textColor="#ffffff"
    		    android:textSize="30sp"
    		    android:onClick="mostrarPalavrasTreinadasPartidaAnterior"
    		    android:background="@drawable/botao_ver_palavras_do_historico" />
    		

    	</RelativeLayout>
        
    	<ImageView
        android:id="@+id/teto_flamula_casual_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/parte_cima_flamula_casual" />
    	
   </RelativeLayout>