<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MostrarDadosUmaPartida" >

    <TextView
        android:id="@+id/tituloDadosDaPartida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/dados_da_partida"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/dataDaPartida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tituloDadosDaPartida"
        android:layout_marginTop="22dp"
        android:textSize="18sp"
        android:text="@string/data_da_partida" />

    <TextView
        android:id="@+id/emailDoAdversario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dataDaPartida"
        android:textSize="18sp"
        android:text="@string/email_do_adversario" />

    <TextView
        android:id="@+id/quemVenceu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/emailDoAdversario"
        android:layout_below="@+id/emailDoAdversario"
        android:textSize="18sp"
        android:text="@string/quem_venceu" />

    <TextView
        android:id="@+id/suaPontuacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/quemVenceu"
        android:layout_below="@+id/quemVenceu"
        android:textSize="18sp"
        android:text="@string/suaPontuacao" />

    <TextView
        android:id="@+id/categorias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/suaPontuacao"
        android:layout_below="@+id/suaPontuacao"
        android:textSize="18sp"
        android:text="@string/categorias" />

    <TextView
        android:id="@+id/tituloListView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/categorias"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:textSize="18sp"
        android:text="@string/palavrasTreinadas" />
    
    <ListView
        android:id="@+id/listViewPalavrasAcertadasErradasTreinadas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/tituloListView"
        android:layout_centerHorizontal="true" >
    </ListView>

    <ImageView
        android:id="@+id/setaDireita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/listViewPalavrasAcertadasErradasTreinadas"
        android:layout_toRightOf="@+id/tituloListView"
        android:src="@drawable/setadireita" />
    
    <ImageView
        android:id="@+id/setaEsquerda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/listViewPalavrasAcertadasErradasTreinadas"
        android:layout_toLeftOf="@+id/tituloListView"
        android:src="@drawable/setaesquerda" />

</RelativeLayout>
