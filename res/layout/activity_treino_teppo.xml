<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/todo_o_fundo_teppo"
    tools:context="com.example.treinocenario.MainActivity$PlaceholderFragment"
    android:background="@drawable/sumoarenasingle0" >

   


    
    
    
    <!-- dummy layout no centro (0x0 dp) centered horizontally -->
    <TextView android:id="@+id/dummy_layout_central" 
        android:layout_width="0dp" 
        android:layout_height="0dp"
        android:layout_centerHorizontal="true" 
        android:visibility="invisible"/>
    
    
    <ImageView
            android:id="@+id/fundoHitsPartida"
            android:layout_width="wrap_content"
       		android:layout_height="wrap_content"
        	android:layout_alignParentLeft="true"
        	android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
        	android:layout_marginBottom="20dp"
        	android:layout_marginLeft="20dp"
            android:src="@drawable/fundopontuacao" />
    
    <TextView
        android:id="@+id/hitsPartida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/fundoHitsPartida"
        android:layout_alignRight="@+id/fundoHitsPartida"
        android:layout_alignTop="@+id/fundoHitsPartida"
        android:layout_alignBottom="@+id/fundoHitsPartida"
        android:gravity="center"
        android:text="@string/label_acertos"
        android:textSize="26sp"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <LinearLayout
        android:id="@+id/layout_listar_categorias"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/hitsPartida"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:visibility="invisible" >

    <TextView
        android:id="@+id/label_categorias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/label_categorias_da_partida"
        android:textAppearance="?android:attr/textAppearanceLarge" />     

    <Gallery
        android:id="@+id/listagem_categorias"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center" >

    </Gallery>
    </LinearLayout>

    <ImageView 
            android:id="@+id/background_kanji_acertar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_below="@+id/layout_listar_categorias"
            android:layout_toRightOf="@+id/mestrekin"
            android:src="@drawable/balaodicamenosgrosso"
            android:layout_marginTop="30dp"
            android:gravity="center"/>
        
        <TextView
            android:id="@+id/kanji_acertar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/background_kanji_acertar"
            android:layout_below="@+id/layout_listar_categorias"
            android:layout_toRightOf="@+id/mestrekin"
            android:gravity="center"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="50dp"
            android:text="自同販売機"
            android:textSize="40sp" />

        <ImageView
            android:id="@+id/mestrekin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/layout_listar_categorias"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="70dp"
            android:src="@drawable/senseiteppocortado" />

        <TextView
            android:id="@+id/traducao_kanji_acertar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/background_kanji_acertar"
            android:layout_below="@+id/kanji_acertar"
            android:layout_toRightOf="@+id/mestrekin"
            android:gravity="center"
            android:layout_marginLeft="40dp"
            android:text="Estudante de ensino médio"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <ImageView
            android:id="@+id/fundo_azul_parte_de_baixo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:visibility="invisible"
            android:src="@drawable/backgroundbotoesteppoazulclaroresized" />

		<LinearLayout
		    android:id="@+id/layoutBotoesAnswer4e1"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_alignBottom="@+id/fundo_azul_parte_de_baixo"
		    android:layout_marginBottom="10dp"
		    android:layout_alignParentLeft="true" >

		    <Button
		        android:id="@+id/answer4"
		        android:layout_width="0px"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="20dp"
		        android:layout_marginRight="20dp"
		        android:layout_weight="3"
		        android:background="@drawable/botaoprototipoteppo"
		        android:text="じどうはんばいき"
		        android:textSize="24sp" />

		    <Button
		        android:id="@+id/answer1"
		        android:layout_width="0px"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="20dp"
		        android:layout_marginRight="20dp"
		        android:layout_weight="3"
		        android:background="@drawable/botaoprototipoteppo"
		        android:text="じどうはんばいき"
		        android:textSize="24sp" />
		</LinearLayout>

		<LinearLayout
		    android:id="@+id/layoutBotoesAnswer3e2"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_above="@+id/layoutBotoesAnswer4e1"
		    android:layout_marginBottom="10dp"
		    android:layout_alignParentLeft="true" >

		    <Button
		        android:id="@+id/answer3"
		        android:layout_width="0px"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="20dp"
		        android:layout_marginRight="20dp"
		        android:layout_weight="3"
		        android:background="@drawable/botaoprototipoteppo"
		        android:singleLine="true"
		        android:text="じどうはんばいき"
		        android:textSize="24sp" />

		    <Button
		        android:id="@+id/answer2"
		        android:layout_width="0px"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="20dp"
		        android:layout_marginRight="20dp"
		        android:layout_weight="3"
		        android:background="@drawable/botaoprototipoteppo"
		        android:singleLine="true"
		        android:text="じどうはんばいき"
		        android:textSize="24sp" />
		</LinearLayout>

		<TextView
		    android:id="@+id/countdown"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_above="@+id/fundo_azul_parte_de_baixo"
		    android:layout_alignParentRight="true"
		    android:layout_marginBottom="37dp"
		    android:layout_marginRight="24dp"
		    android:background="@drawable/tempo_partida_novo"
		    android:gravity="center"
		    android:paddingBottom="40dp"
		    android:paddingLeft="10dp"
		    android:paddingRight="10dp"
		    android:paddingTop="20dp"
		    android:text="00:00"
		    android:textAppearance="?android:attr/textAppearanceMedium"
		    android:textSize="28sp" />
    
    </RelativeLayout> 