<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.treinocenario.MainActivity$PlaceholderFragment" >
    
    <!-- dummy layout no centro (0x0 dp) centered horizontally -->
    <TextView android:id="@+id/dummy_layout_central" 
        android:layout_width="0dp" 
        android:layout_height="0dp"
        android:layout_centerHorizontal="true" 
        android:visibility="invisible"/>
    
    <TextView
        android:id="@+id/hitsPartida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Strikes:00000"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    <TextView
        android:id="@+id/countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="00:00"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <LinearLayout
        android:id="@+id/layout_listar_categorias"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/countdown"
        android:orientation="horizontal" >

    <TextView
        android:id="@+id/label_categorias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/label_categorias_da_partida"
        android:textAppearance="?android:attr/textAppearanceLarge" />     

    <Gallery
        android:id="@+id/listagem_categorias"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center" >

    </Gallery>
    </LinearLayout>
    
    <ImageView
        android:id="@+id/ringue_luta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/answer3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/kanji_acertar"
        android:layout_marginBottom="20dp"
        android:src="@drawable/sumoarenasingle0" />

    <Button
        android:id="@+id/answer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/dummy_layout_central"
        android:textColor="#FFFFFF"
        android:background="@drawable/red_button"
        android:layout_marginRight="5dp"
        android:text="じどうはんばいき" />

    <Button
        android:id="@+id/answer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/answer1"
        android:layout_alignBottom="@+id/answer1"
        android:layout_alignLeft="@+id/dummy_layout_central"
        android:layout_alignParentRight="true"
        android:textColor="#FFFFFF"
        android:background="@drawable/red_button"
        android:layout_marginLeft="5dp"
        android:text="じどうはんばいき" />

    <Button
        android:id="@+id/answer3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/answer1"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/answer1"
        android:textColor="#FFFFFF"
        android:background="@drawable/red_button"
        android:layout_marginBottom="10dp"
        android:text="じどうはんばいき" />

    <Button
        android:id="@+id/answer4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/answer3"
        android:layout_alignLeft="@+id/answer2"
        android:layout_alignParentRight="true"
        android:textColor="#FFFFFF"
        android:background="@drawable/red_button"
        android:text="じどうはんばいき" />
        
    <TextView
        android:id="@+id/kanji_acertar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/layout_listar_categorias"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="20dp"
        android:textSize="55sp"
        android:layout_toRightOf="@+id/sensei"
        android:background="@drawable/balloontopedownmelhor"
        android:gravity="center"
        android:text="自同販売機" />

    <ImageView
        android:id="@+id/sensei"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/layout_listar_categorias"
        android:layout_above="@+id/ringue_luta"
        android:layout_marginTop="50dp"
        android:src="@drawable/sensei" />
    
</RelativeLayout> 
