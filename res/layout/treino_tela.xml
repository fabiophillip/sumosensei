<?xml version="1.0" encoding="utf-8"?>

<!-- GAMEPLAY SCREEN -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/screen_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <!-- mudei só o alignTop -->

	<!-- dummy layout no centro (0x0 dp) centered horizontally -->
    <TextView android:id="@+id/dummy_layout_central" 
        android:layout_width="0dp" 
        android:layout_height="0dp"
        android:layout_centerHorizontal="true" 
        android:visibility="invisible"/>

    <!-- esse textView abaixo só serve para centralizar os sumos -->

	<ImageView
	    android:id="@+id/ringue_luta"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_above="@+id/nome_jogador_host"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentRight="true"
	    android:layout_below="@+id/sensei"
	    android:background="#222222"
	    android:src="@drawable/sumo_0_0" />

    <Button
        android:id="@+id/answer3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/answer4"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/dummy_layout_central"
        android:background="@drawable/red_button"
        android:singleLine="true"
        android:text="じどうはんばいき"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

    <Button
        android:id="@+id/answer4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/dummy_layout_central"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/red_button"
        android:singleLine="true"
        android:text="じどうはんばいき"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="5dp"
        android:textSize="24sp" />

    <Button
        android:id="@+id/answer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/dummy_layout_central"
        android:layout_marginRight="5dp"
        android:layout_below="@+id/answer3"
        android:background="@drawable/red_button"
        android:singleLine="true"
        android:text="じどうはんばいき"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

    

    <ImageView
        android:id="@+id/balaofala"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_listar_categorias"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/sensei"
        android:src="@drawable/balloontopedownmelhor" />

    <ImageView
        android:id="@+id/sensei"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/layout_listar_categorias"
        android:src="@drawable/sensei" />

    <TextView
        android:id="@+id/score_partida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Score:00000"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="00:00"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/kanji_acertar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/balaofala"
        android:layout_alignTop="@+id/balaofala"
        android:layout_alignRight="@+id/balaofala"
        android:layout_alignBottom="@+id/balaofala"
        android:gravity="center"
        android:text="自動販売機"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        android:id="@+id/layout_listar_categorias"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/countdown"
        android:orientation="horizontal" >

    <TextView
        android:id="@+id/label_categorias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/label_categorias_da_partida"
        android:textAppearance="?android:attr/textAppearanceLarge" />     

    <Gallery
        android:id="@+id/listagem_categorias"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center" >

    </Gallery>
    </LinearLayout>

    <Button
        android:id="@+id/answer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/answer4"
        android:layout_alignLeft="@+id/dummy_layout_central"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/answer3"
        android:background="@drawable/red_button"
        android:singleLine="true"
        android:text="じどうはんばいき"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="10dp"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/answer3"
        android:layout_alignLeft="@+id/answer3"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/labelItemJogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/label_itens"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <ImageButton
            android:id="@+id/botaoItem1"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/semitem" />
    </LinearLayout>

    <TextView
        android:id="@+id/nome_jogador_host"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout1"
        android:layout_alignParentLeft="true"
        android:text="Medium9Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/nome_jogador_guest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout1"
        android:layout_alignParentRight="true"
        android:layout_alignBaseline="@+id/nome_jogador_host"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/nome_jogador_guest"
        android:layout_toRightOf="@+id/nome_jogador_host"
        android:layout_toLeftOf="@+id/nome_jogador_guest"
        android:gravity="center"
        android:text="VS."
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>