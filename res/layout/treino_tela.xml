<?xml version="1.0" encoding="utf-8"?>


 
        
<!-- TELA DE FIM DE JOGO -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/screen_final_partida"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_tela_fim_host_ganha" 
    tools:context="com.example.treinocenario.MainActivity$PlaceholderFragment" >

    <!-- esse textView abaixo sÃ³ serve para centralizar os sumos -->
    
    <ImageView
        android:id="@+id/background_baixo_fim_de_jogo_casual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:scaleType="fitXY"
        android:src="@drawable/backgound_baixo_fim_de_jogo_casual" />
    
    <ImageView
      android:id="@+id/figura_jogador_host_final"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignLeft="@+id/botao_menu_principal"
      android:layout_alignTop="@+id/background_baixo_fim_de_jogo_casual"
      android:layout_marginTop="10dp"
      android:src="@drawable/campo_jogador_left_final_casual" />
    
    <ImageView
      android:id="@+id/figura_jogador_guest_final"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:layout_alignParentRight="true"
      android:layout_marginRight="30dp"
      android:layout_alignTop="@+id/background_baixo_fim_de_jogo_casual"
      android:src="@drawable/campo_jogador_right_final_casual" />

  <ImageView
      android:id="@+id/icone_figura_jogador_host_final"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignLeft="@+id/figura_jogador_host_final"
      android:layout_alignTop="@+id/nome_jogador_host_final"
      android:src="@drawable/bola_campo_jogador_left_final_casual" />

   
	 
	 <ImageView
	     android:id="@+id/icone_figura_jogador_guest_final"
	     android:layout_width="wrap_content"
	     android:layout_height="wrap_content"
	     android:src="@drawable/bola_campo_jogador_right_final_casual"
	     android:layout_alignParentRight="true"
	     android:layout_marginRight="30dp"
	     android:layout_marginTop="10dp"
	     android:layout_alignTop="@+id/background_baixo_fim_de_jogo_casual" />
	 
	 <TextView
      android:id="@+id/nome_jogador_host_final"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignBottom="@+id/figura_jogador_host_final"
      android:layout_alignRight="@+id/figura_jogador_host_final"
      android:layout_alignTop="@+id/figura_jogador_host_final"
      android:layout_toRightOf="@+id/icone_figura_jogador_host_final"
      android:gravity="center|left"
      android:paddingLeft="10dp"
      android:layout_marginRight="10dp"
      android:text="Fai Lin"
      android:textAppearance="?android:attr/textAppearanceMedium"
      android:textColor="#ffffff" />

  <TextView
      android:id="@+id/nome_jogador_guest_final"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignBottom="@+id/figura_jogador_guest_final"
      android:layout_alignLeft="@+id/figura_jogador_guest_final"
      android:layout_alignTop="@+id/figura_jogador_guest_final"
      android:layout_toLeftOf="@+id/icone_figura_jogador_guest_final"
      android:gravity="center|right"
      android:paddingRight="10dp"
      android:layout_marginLeft="10dp"
      android:text="Fai Ling Ling"
      android:textAppearance="?android:attr/textAppearanceMedium"
      android:textColor="#ffffff" />
	 
    
    <!-- referente ao chat -->

  

  <Button
      android:id="@+id/botao_menu_principal"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_alignParentLeft="true"
      android:layout_marginLeft="30dp"
      android:layout_marginBottom="20dp"
      android:background="@drawable/botao_menu_principal_chat_casual"
      android:padding="5dp"
      android:text="@string/botao_menu_rincipal"
      android:textColor="#222222" />

  <TextView
      android:id="@+id/textView2Final"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignBottom="@+id/figura_jogador_host_final"
      android:layout_alignTop="@+id/figura_jogador_guest_final"
      android:layout_centerHorizontal="true"
      android:gravity="center"
      android:text="VS"
      android:textAppearance="?android:attr/textAppearanceSmall"
      android:textColor="#2b2200"
      android:textSize="30sp" />


  <Button
      android:id="@+id/botao_abrir_popup_chat"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignBaseline="@+id/botao_menu_principal"
      android:layout_alignBottom="@+id/botao_menu_principal"
      android:layout_alignRight="@+id/figura_jogador_guest_final"
      android:layout_marginRight="35dp"
      android:background="@drawable/icone_chat" />

  <ImageView
      android:id="@+id/balao_resultados"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignTop="@+id/mestre_kin"
      android:layout_centerHorizontal="true"
      android:src="@drawable/balaodicamenosgrosso" />

  <ImageView
      android:id="@+id/mestre_kin"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      android:layout_marginTop="23dp"
      android:layout_toLeftOf="@+id/balao_resultados"
      android:src="@drawable/mestre" />

  <TextView
      android:id="@+id/quem_ganhou_final"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignBottom="@+id/balao_resultados"
      android:layout_alignRight="@+id/balao_resultados"
      android:layout_alignTop="@+id/balao_resultados"
      android:layout_marginLeft="40dp"
      android:textSize="25sp"
      android:layout_toRightOf="@+id/mestre_kin"
      android:gravity="center"
      android:text="Furustreco ganhou"
      android:textAppearance="?android:attr/textAppearanceLarge"
      android:textColor="#000000" />

</RelativeLayout>
