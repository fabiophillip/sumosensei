<?xml version="1.0" encoding="utf-8"?>
 <!-- GAMEPLAY SCREEN -->
   <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/screen_game" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >
    <!-- mudei só o alignTop -->

   

    <!-- esse textView abaixo só serve para centralizar os sumos -->

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="108dp"
        android:layout_toLeftOf="@+id/nome_jogador_guest"
        android:layout_toRightOf="@+id/nome_jogador_host"
        android:text="VS."
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/score_partida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score:00000"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/kanji_acertar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/textView2"
        android:layout_below="@+id/score_partida"
        android:gravity="center"
        android:text="自動販売機"
        android:layout_marginTop="40dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/score_partida"
        android:layout_alignTop="@+id/textview_label_tempo_restante"
        android:text="00:00"
        android:layout_toRightOf="@+id/textview_label_tempo_restante"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageView
        android:id="@+id/ringue_luta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/nome_jogador_host"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/score_partida"
        android:layout_marginTop="78dp"
        android:background="#222222"
        android:src="@drawable/sumo_0_0" />

    <TextView
        android:id="@+id/nome_jogador_host"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/nome_jogador_guest"
        android:layout_alignLeft="@+id/ringue_luta"
        android:text="Medium9Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/answer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/ringue_luta"
        android:layout_alignTop="@+id/kanji_acertar"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@+id/kanji_acertar"
        android:background="@drawable/red_button"
        android:singleLine="true"
        android:text="じどうはんばいき"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <Button
        android:id="@+id/answer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/answer1"
        android:layout_alignRight="@+id/ringue_luta"
        android:layout_below="@+id/answer1"
        android:background="@drawable/red_button"
        android:singleLine="true"
        android:text="じどうはんばいき"
        android:textColor="#FFFFFF"
        android:layout_marginTop="10dp"
        android:textSize="30sp" />

    <Button
        android:id="@+id/answer4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/answer2"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/answer3"
        android:background="@drawable/red_button"
        android:singleLine="true"
        android:text="じどうはんばいき"
        android:textColor="#FFFFFF"
        android:layout_marginTop="10dp"
        android:textSize="30sp" />

    <Button
        android:id="@+id/answer3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/answer4"
        android:layout_alignRight="@+id/answer4"
        android:layout_below="@+id/answer2"
        android:background="@drawable/red_button"
        android:singleLine="true"
        android:text="じどうはんばいき"
        android:textColor="#FFFFFF"
        android:layout_marginTop="10dp"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/nome_jogador_guest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/ringue_luta"
        android:layout_alignTop="@+id/textView2"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textview_label_tempo_restante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/score_partida"
        android:layout_alignBottom="@+id/score_partida"
        android:layout_toRightOf="@+id/score_partida"
        android:text="@string/label_tempo_restante"
        android:layout_marginLeft="10dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
	</RelativeLayout>