<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/popup_escolha_categorias"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
     >

    <LinearLayout
        android:id="@+id/ambas_as_listas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:weightSum="1"
        android:layout_below="@+id/tituloEscolhaAsCategoriasPesquisarSalasModoCasual"
         >
    <ListView
        android:id="@+id/listaCategoriasPesquisaSalas1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:layout_marginTop="40sp"
        android:divider="@android:color/transparent"
        android:dividerHeight="10dp"
        android:listSelector="@android:color/transparent" 
		android:cacheColorHint="@android:color/transparent" >
    </ListView>
	
    <ListView
        android:id="@+id/listaCategoriasPesquisaSalas2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:layout_marginTop="40sp"
        android:divider="@android:color/transparent"
        android:dividerHeight="10dp"
        android:listSelector="@android:color/transparent" 
		android:cacheColorHint="@android:color/transparent" >
    </ListView>
	</LinearLayout>
    
	<TextView
    android:id="@+id/tituloEscolhaAsCategoriasPesquisarSalasModoCasual"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="20dp"
    android:text="@string/escolha_categoria"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:textSize="35sp"
    android:textColor="#520206"
    android:gravity="center"/>

	<Button
    android:id="@+id/confirmar_escolha_categorias"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/ambas_as_listas"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="36dp"
    android:text="@string/botao_filtro_categoria"
    android:textColor="#FFFFFF"
    android:textSize="25sp"
    android:background="@drawable/red_button" />    

</RelativeLayout>
