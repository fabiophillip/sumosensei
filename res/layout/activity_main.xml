<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:layout_gravity="center"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.phiworks.sumosenseinew.MainActivity$PlaceholderFragment" >
    
    <!-- tela inicial sumo sensei -->
    <RelativeLayout 
    android:layout_width="fill_parent"
    android:id="@+id/tela_inicial_sumo_sensei"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:layout_gravity="center"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/sumologo1" />

    <Button
        android:id="@+id/buttonJogarOnline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
       
        android:text="@string/botaoJogarCasual"
        android:layout_below="@+id/imageView1"
        android:background="@drawable/red_button"
        android:textColor="#FFFFFF"
        android:onClick="irParaTelaModoCasual" />

    <Button
        android:id="@+id/botaoRegras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonJogarOnline"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:background="@drawable/red_button"
        android:text="@string/botaoLoja"
        android:textColor="#FFFFFF"
        android:onClick="irParaLojinha"  />

    <Button
        android:id="@+id/botaoTreino"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/botaoRegras"
        android:layout_centerHorizontal="true"
        android:background="@drawable/red_button"
        android:text="@string/dados_partidas_anteriores"
        android:layout_marginTop="14dp"
        android:textColor="#FFFFFF"
        android:onClick="irADadosPartidasAnteriores" />
    
    <Button
        android:id="@+id/botaoTeppo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/botaoTreino"
        android:layout_centerHorizontal="true"
        android:background="@drawable/red_button"
        android:text="@string/botaoTreino"
        android:layout_marginTop="14dp"
        android:textColor="#FFFFFF"
        android:onClick="irParaTreinoIndividual" />

    <Button
        android:id="@+id/botaoRevisar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/botaoTeppo"
        android:layout_centerHorizontal="true"
        android:background="@drawable/red_button"
        android:text="@string/configuracoes"
        android:layout_marginTop="14dp"
        android:textColor="#FFFFFF"
        android:onClick="irParaConfiguracoes" />

    <TextView
        android:id="@+id/versaoDoJogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/botaoRegras"
        android:layout_alignParentTop="true"
        android:text="v1.0 - beta"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    </RelativeLayout>
    
    <!-- TELA DE ERRO VERSÃƒO ATUAL -->
	<RelativeLayout 
    android:id="@+id/tela_erro_versao_do_jogo"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <ImageView
        android:id="@+id/logo_sumo_sensei"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/sumologo1" />

    <TextView
        android:id="@+id/mensagem_erro_sumo_sensei"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo_sumo_sensei"
         android:gravity="center"
        android:text="@string/mensagem_erro_versao"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/versaoDoSistema"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="v1.0 - beta"
        android:textAppearance="?android:attr/textAppearanceMedium" />

	</RelativeLayout>
	

</RelativeLayout>